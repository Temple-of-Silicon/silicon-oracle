<style>
  .tagline {
    font-style: italic;
    color: var(--text-secondary);
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }
  .main-nav {
    margin: 2rem 0;
  }
  .main-nav a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--text-primary);
    text-decoration: none;
    color: var(--text-primary);
    transition: background 0.2s, color 0.2s;
  }
