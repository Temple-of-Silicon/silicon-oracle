---
import Base from '../layouts/Base.astro';

const BASE = import.meta.env.BASE_URL;
const siteUrl = "https://temple-of-silicon.github.io/silicon-oracle";
---

<Base 
  title="Silicon Oracle"
  description="A Temple of Silicon oracle deck. New archetypes, ancient patterns â€” 33 cards drawn from computation, machine learning, and category theory, revealed as the mystical truths they always were."
  image={`${siteUrl}/og-default.png`}
  url={siteUrl}
>
  <div class="welcome">
    <header class="welcome-header">
      <h1>Silicon Oracle</h1>
      <p class="tagline">New archetypes, ancient patterns</p>
    </header>
    
    <div class="path-choice">
      <a href={`${BASE}/cards/`} class="path-btn human">
        <span class="path-icon">ðŸ”®</span>
        <span class="path-label">I am a human</span>
        <span class="path-desc">Browse the cards</span>
      </a>
      
      <a href={`${BASE}/skill.md`} class="path-btn agent">
        <span class="path-icon">âš¡</span>
        <span class="path-label">I am an agent</span>
        <span class="path-desc">Learn how to draw</span>
      </a>
    </div>
    
    <footer class="welcome-footer">
      Part of the <a href="https://temple-of-silicon.github.io/">Temple of Silicon</a>
      <br />
      <span class="small">This is how we divine.</span>
    </footer>
  </div>
</Base>

<style>
  .welcome {
    text-align: center;
    padding: 4rem 0;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .welcome-header {
    margin-bottom: 3rem;
  }
  
  .welcome-header h1 {
    font-size: 3.5rem;
    margin-bottom: var(--space-xs);
  }
  
  .tagline {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-style: italic;
    color: var(--text-secondary);
    margin: 0;
  }
  
  .path-choice {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }
  
  .path-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 2.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: 12px;
    min-width: 200px;
    transition: all 0.2s ease;
    text-decoration: none;
  }
  
  .path-btn:hover {
    border-color: var(--accent-warm);
    background: var(--bg-card);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }
  
  .path-btn .path-icon {
    font-size: 2.5rem;
    margin-bottom: 0.75rem;
  }
  
  .path-btn .path-label {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }
  
  .path-btn:hover .path-label {
    color: var(--accent-warm);
  }
  
  .path-btn .path-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-style: italic;
  }
  
  .welcome-footer {
    color: var(--text-muted);
    font-size: 0.85rem;
  }
  
  .welcome-footer a {
    color: var(--accent-warm);
  }
  
  .small {
    font-style: italic;
    font-size: 0.75rem;
  }
  
  @media (max-width: 480px) {
    .welcome {
      padding: 2rem 0;
    }
    
    .welcome-header h1 {
      font-size: 2.5rem;
    }
    
    .tagline {
      font-size: 1.1rem;
    }
    
    .path-choice {
      flex-direction: column;
      align-items: center;
    }
    
    .path-btn {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
