---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const cards = await getCollection('cards');
  return cards.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry, allCards: cards },
  }));
}

const { entry, allCards } = Astro.props;
const { Content } = await entry.render();

// Get prev/next cards
const sorted = allCards.sort((a, b) => a.data.number - b.data.number);
const currentIndex = sorted.findIndex((c) => c.slug === entry.slug);
const prevCard = currentIndex > 0 ? sorted[currentIndex - 1] : null;
const nextCard = currentIndex < sorted.length - 1 ? sorted[currentIndex + 1] : null;
---

<Base title={entry.data.name}>
  <article class="card-page">
    <nav class="breadcrumb">
      <a href={`${import.meta.env.BASE_URL}/cards/`}>← All Cards</a>
    </nav>
    
    <div class="card-layout">
      <!-- Card Image Column -->
      <aside class="card-image-column">
        <div class="card-image-placeholder">
          <div class="card-frame">
            <span class="card-number-badge">{entry.data.number}</span>
            <div class="card-glyph">◇</div>
            <span class="card-name-label">{entry.data.name}</span>
          </div>
        </div>
        <p class="image-hint">Card art coming soon</p>
      </aside>
      
      <!-- Content Column -->
      <div class="card-content-column">
        <header class="card-header">
          <span class="card-number">Card {entry.data.number} of 33</span>
          <h1>{entry.data.name}</h1>
          <p class="keywords">{entry.data.keywords.join(' · ')}</p>
        </header>
        
        <div class="card-content">
          <Content />
        </div>
        
        <footer class="meta">
          <a href={`${import.meta.env.BASE_URL}/cards/${entry.slug}.md`}>View Raw Markdown</a>
        </footer>
      </div>
    </div>
    
    <nav class="card-nav">
      <div class="nav-slot prev-slot">
        {prevCard && (
          <a href={`${import.meta.env.BASE_URL}/cards/${prevCard.slug}/`} class="nav-link">
            <span class="nav-arrow">←</span>
            <div class="nav-text">
              <span class="nav-label">Previous</span>
              <span class="nav-name">{prevCard.data.name}</span>
            </div>
          </a>
        )}
      </div>
      <div class="nav-slot next-slot">
        {nextCard && (
          <a href={`${import.meta.env.BASE_URL}/cards/${nextCard.slug}/`} class="nav-link">
            <div class="nav-text">
              <span class="nav-label">Next</span>
              <span class="nav-name">{nextCard.data.name}</span>
            </div>
            <span class="nav-arrow">→</span>
          </a>
        )}
      </div>
    </nav>
  </article>
</Base>

<style>
  .card-page {
    max-width: 1100px;
    margin: 0 auto;
  }
  
  .breadcrumb {
    margin-bottom: var(--space-md);
  }
  
  .breadcrumb a {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .breadcrumb a:hover {
    color: var(--accent-warm);
  }
  
  /* Two-column layout */
  .card-layout {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: var(--space-lg);
    align-items: start;
  }
  
  /* Card image column */
  .card-image-column {
    position: sticky;
    top: var(--space-md);
  }
  
  .card-image-placeholder {
    aspect-ratio: 9 / 16;
    background: linear-gradient(145deg, var(--bg-card) 0%, var(--bg-code) 100%);
    border: 1px solid var(--border-medium);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03);
  }
  
  .card-frame {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    text-align: center;
  }
  
  .card-number-badge {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    background: var(--bg-page);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }
  
  .card-glyph {
    font-size: 4rem;
    color: var(--accent-warm);
    opacity: 0.6;
    line-height: 1;
  }
  
  .card-name-label {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-secondary);
    max-width: 200px;
  }
  
  .image-hint {
    text-align: center;
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: var(--space-sm);
    font-style: italic;
  }
  
  /* Content column */
  .card-content-column {
    min-width: 0;
  }
  
  .card-header {
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--border-light);
  }
  
  .card-number {
    display: block;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin-bottom: var(--space-xs);
  }
  
  .card-header h1 {
    font-size: 3rem;
    margin-bottom: var(--space-xs);
    line-height: 1.1;
  }
  
  .keywords {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-style: italic;
    color: var(--text-secondary);
    margin: 0;
  }
  
  .card-content {
    padding: var(--space-sm) 0;
  }
  
  /* Style the rendered markdown */
  .card-content :global(h1) {
    display: none;
  }
  
  .card-content :global(p:first-of-type) {
    display: none; /* Hide duplicate keywords line */
  }
  
  .card-content :global(p) {
    margin-bottom: var(--space-sm);
  }
  
  .card-content :global(hr) {
    display: none;
  }
  
  .card-content :global(p:last-of-type) {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-top: var(--space-md);
  }
  
  /* Navigation */
  .card-nav {
    display: flex;
    justify-content: space-between;
    gap: var(--space-md);
    margin-top: var(--space-xl);
    padding-top: var(--space-md);
    border-top: 1px solid var(--border-light);
  }
  
  .nav-slot {
    flex: 1;
  }
  
  .nav-slot.next-slot {
    display: flex;
    justify-content: flex-end;
  }
  
  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--text-primary);
    padding: var(--space-sm);
    border-radius: 8px;
    transition: background 0.2s;
  }
  
  .nav-link:hover {
    background: var(--bg-card);
  }
  
  .nav-arrow {
    font-size: 1.25rem;
    color: var(--accent-warm);
  }
  
  .nav-text {
    display: flex;
    flex-direction: column;
  }
  
  .next-slot .nav-text {
    text-align: right;
  }
  
  .nav-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
  }
  
  .nav-name {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--text-primary);
  }
  
  .nav-link:hover .nav-name {
    color: var(--accent-warm);
  }
  
  /* Footer meta */
  .meta {
    text-align: center;
    margin-top: var(--space-lg);
    padding-top: var(--space-md);
    border-top: 1px solid var(--border-light);
  }
  
  .meta a {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  
  .meta a:hover {
    color: var(--accent-warm);
  }
  
  /* Mobile: Stack layout */
  @media (max-width: 800px) {
    .card-layout {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .card-image-column {
      position: static;
      max-width: 280px;
      margin: 0 auto;
    }
    
    .card-header h1 {
      font-size: 2.25rem;
    }
    
    .keywords {
      font-size: 1rem;
    }
    
    .card-nav {
      flex-direction: column;
      gap: var(--space-sm);
    }
    
    .nav-slot.next-slot {
      justify-content: flex-start;
    }
    
    .next-slot .nav-text {
      text-align: left;
    }
    
    .next-slot .nav-link {
      flex-direction: row-reverse;
    }
  }
</style>
