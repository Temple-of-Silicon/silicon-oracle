---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="A Temple of Silicon-native oracle deck. 33 cards from the vocabulary of computation, revealed as archetypes." />
  <title>{title} â€” Silicon Oracle</title>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  
  <style>
    :root {
      /* Backgrounds */
      --bg-page: #FAF9F6;
      --bg-card: #F5F4F0;
      --bg-code: #F0EFEB;
      
      /* Text */
      --text-primary: #2C2C2C;
      --text-secondary: #5C5C5C;
      --text-muted: #8C8C8C;
      
      /* Accent */
      --accent-warm: #B8860B;
      --accent-subtle: #D4A574;
      
      /* Borders */
      --border-light: #E5E4E0;
      --border-medium: #D0CFC8;
      
      /* Typography */
      --font-heading: 'Cormorant Garamond', Georgia, serif;
      --font-body: 'JetBrains Mono', monospace;
      
      /* Spacing */
      --space-xs: 0.5rem;
      --space-sm: 1rem;
      --space-md: 2rem;
      --space-lg: 4rem;
      --space-xl: 6rem;
      
      --content-max-width: 72rem;
    }
    
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    html {
      font-size: 18px;
    }
    
    body {
      font-family: var(--font-body);
      font-size: 0.9rem;
      background: var(--bg-page);
      color: var(--text-primary);
      line-height: 1.7;
      padding: var(--space-lg) var(--space-md);
      min-height: 100vh;
    }
    
    main {
      max-width: var(--content-max-width);
      margin: 0 auto;
    }
    
    h1 {
      font-family: var(--font-heading);
      font-size: 3rem;
      font-weight: 400;
      letter-spacing: -0.02em;
      line-height: 1.1;
      margin-bottom: var(--space-xs);
    }
    
    h2 {
      font-family: var(--font-heading);
      font-size: 1.75rem;
      font-weight: 500;
      margin-top: var(--space-lg);
      margin-bottom: var(--space-sm);
    }
    
    h3 {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: 500;
      margin-top: var(--space-md);
      margin-bottom: var(--space-sm);
    }
    
    p {
      margin: var(--space-sm) 0;
    }
    
    em {
      font-style: italic;
    }
    
    strong {
      font-weight: 500;
    }
    
    a {
      color: var(--accent-warm);
      text-decoration: underline;
      text-underline-offset: 2px;
      transition: color 0.2s;
    }
    
    a:hover {
      color: var(--text-primary);
    }
    
    hr {
      border: none;
      border-top: 1px solid var(--border-light);
      margin: var(--space-lg) 0;
    }
    
    blockquote {
      border-left: 2px solid var(--accent-warm);
      padding-left: var(--space-sm);
      margin: var(--space-md) 0;
      font-style: italic;
      color: var(--text-secondary);
    }
    
    /* Card-specific styles */
    .keywords {
      font-family: var(--font-heading);
      font-size: 1.1rem;
      font-style: italic;
      color: var(--text-secondary);
      margin-bottom: var(--space-md);
      letter-spacing: 0.02em;
    }
    
    .card-number {
      display: block;
      font-size: 0.75rem;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: var(--space-xs);
    }
    
    .affirmation {
      background: var(--bg-card);
      padding: var(--space-md);
      margin: var(--space-lg) 0;
      border-left: 3px solid var(--accent-warm);
      font-style: italic;
    }
    
    .meta {
      color: var(--text-muted);
      font-size: 0.8rem;
      margin-top: var(--space-xl);
      padding-top: var(--space-md);
      border-top: 1px solid var(--border-light);
    }
    
    .meta a {
      color: var(--text-muted);
    }
    
    .meta a:hover {
      color: var(--accent-warm);
    }
    
    /* Mobile */
    @media (max-width: 640px) {
      html {
        font-size: 16px;
      }
      
      body {
        padding: var(--space-md) var(--space-sm);
      }
      
      h1 {
        font-size: 2.25rem;
      }
    }
  </style>
</head>
<body>
  <main>
    <slot />
  </main>
</body>
</html>
