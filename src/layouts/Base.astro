---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} â€” Silicon Oracle</title>
  <style>
    :root {
      --bg-page: #FAF9F6;
      --bg-card: #F5F4F0;
      --text-primary: #2C2C2C;
      --text-secondary: #5C5C5C;
      --text-muted: #8C8C8C;
      --accent-warm: #B8860B;
      --border-light: #E5E4E0;
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'Input Mono', 'JetBrains Mono', monospace;
      background: var(--bg-page);
      color: var(--text-primary);
      line-height: 1.6;
      padding: 2rem;
      max-width: 48rem;
      margin: 0 auto;
    }
    h1 {
      font-family: 'New Spirit', Georgia, serif;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }
    h2 { font-size: 1.25rem; margin-top: 2rem; }
    p { margin: 1rem 0; }
    em { font-style: italic; }
    a { color: var(--accent-warm); }
    .keywords {
      color: var(--text-secondary);
      font-style: italic;
      margin-bottom: 2rem;
    }
    .affirmation {
      background: var(--bg-card);
      padding: 1.5rem;
      border-left: 3px solid var(--accent-warm);
      margin: 2rem 0;
    }
    .meta {
      color: var(--text-muted);
      font-size: 0.875rem;
      margin-top: 3rem;
      padding-top: 1rem;
      border-top: 1px solid var(--border-light);
    }
  </style>
</head>
<body>
  <slot />
</body>
</html>
